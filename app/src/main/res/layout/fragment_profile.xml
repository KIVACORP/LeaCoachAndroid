<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewcontrollers.fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin">

        <ImageView
            android:id="@+id/youtubePlayer"
            android:layout_width="@dimen/default_image_size"
            android:layout_height="@dimen/default_image_size"
            android:layout_margin="@dimen/default_margin"
            android:contentDescription="@string/image_profile"
            android:padding="@dimen/default_padding"
            android:src="@mipmap/img_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/firstNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="24dp"
            android:text="Kevin Alonzo Riveros Guia"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/youtubePlayer"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="kevinriveros@gmail.com"
            app:layout_constraintStart_toEndOf="@id/youtubePlayer"
            app:layout_constraintTop_toBottomOf="@+id/firstNameTextView"

            />

        <TextView
            android:id="@+id/birthdayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="26-mayo-1998"
            app:layout_constraintStart_toEndOf="@id/youtubePlayer"
            app:layout_constraintTop_toBottomOf="@+id/emailTextView"

            />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="931359458"
            app:layout_constraintStart_toEndOf="@id/youtubePlayer"
            app:layout_constraintTop_toBottomOf="@+id/birthdayTextView"

            />

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="Edit"
            app:layout_constraintStart_toEndOf="@id/youtubePlayer"
            app:layout_constraintTop_toBottomOf="@+id/phoneTextView"
            />
        <Button
            android:id="@+id/logOutButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:text="Logout"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </android.support.constraint.ConstraintLayout>


</FrameLayout>